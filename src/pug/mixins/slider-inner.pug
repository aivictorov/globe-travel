mixin slider-inner(title, text)
    .slider-inner
        .slider-inner__background
            block slider-inner-background
        .container
            .slider-inner__content
                h1.slider-inner__title #{title}
                .slider-inner__text #{text}
        .slider-inner__form-wrapper
            .container
                block slider-inner-form