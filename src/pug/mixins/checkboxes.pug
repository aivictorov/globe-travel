mixin rating-filter-checkbox(text, width = '40px')
    .rating-filter-checkbox
        label.rating-filter-checkbox__label
            input(type="checkbox").rating-filter-checkbox__hidden.visually-hidden
            .rating-filter-checkbox__custom(
                style= width !== '' ? `width: ${width};` : false,
            ) #{text}

