mixin checkbox(name = '', style='')
    .checkbox
        label.checkbox__label(
            class= style !== '' ? "checkbox__label--" + style : false
        )
            input.checkbox__hidden(
                type="checkbox", 
                class="visually-hidden",
                name= name !== '' ? name : false
            )
            .checkbox__custom
            .checkbox__value
                block

