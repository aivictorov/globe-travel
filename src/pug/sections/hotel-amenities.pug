section.hotel-amenities 
    h2.hotel-amenities__title Amenities

    -
        var items = [
            {
                icon: '#food',
                title: 'Outdoor pool'
            },
            {
                icon: '#wifi',
                title: 'Fitness center'
            },
            {
                icon: '#seat',
                title: 'Indoor pool'
            },
            {
                icon: '#food',
                title: 'Bar/Lounge'
            },
            {
                icon: '#wifi',
                title: 'Spa and wellness center'
            },
                            {
                icon: '#food',
                title: 'Free Wi-Fi'
            },
                            {
                icon: '#wifi',
                title: 'Restaurant'
            },
                            {
                icon: '#wifi',
                title: 'Tea/coffee machine'
            },
                            {
                icon: '#wifi',
                title: 'Room service'
            }
        ]

        var maxHeight = (items.length + 1) / 2 * 48

    ul.hotel-amenities__list(style=`max-height: ${maxHeight}px`)
        each item in items 
            li.hotel-amenities__item
                .hotel-amenities__item-icon
                    +use-svg(24, 24, item.icon)
                .hotel-amenities__item-title #{item.title}
        li.hotel-amenities__item
            a.hotel-amenities__link(href="#!") +24 more