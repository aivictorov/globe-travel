section.account-cover 
    .container 
        .account-cover__background
            img(src="./img/users/cover.jpg", alt="account-cover")
            .account-cover__upload-button
                +button('Upload new cover', '', {id: '#upload-icon', width: 16, height: 16}, '', '')
        .account-cover__user
            .account-cover__user-avatar
                .account-cover__user-avatar-image
                    img(src="./img/users/avatars/01.jpg", alt="user-avatar")
                button.account-cover__user-avatar-edit-button(type="button")
                    +use-svg(24, 24, '#pen-icon')
            .account-cover__user-name
                | John Doe
            .account-cover__user-email
                | john.doe@gmail.com